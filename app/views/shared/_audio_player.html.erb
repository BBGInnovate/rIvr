<% if @branch %>
<div>
  <h2>Preview Voice Forum</h2>
  <% audios = audio_players(@branch) %>
   <% audios.each do |a| %>
     <span><b><%= a[0] %></b></span>
     <span><%= a[1] %></span>
     <span><%= a[2] %></span>
     <br/></br/>
  <% end %>
</div>

<% if @branch.forum_type=="report" %>
<div id="report-upload" class="helpPopUp" style="display:none;">
  <%= render :partial=>'/templates/upload_report' %>
</div>
<% end %>

<script>
jQuery(document).ready(function(){
  $(".audio").mb_miniPlayer({
    width:240,
    inLine:false,
    id3:false
  });
});
</script>
<% end %>
