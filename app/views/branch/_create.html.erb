<div id="template-popup" class="template-popup">
<h2 id="create-branch">Create Branch</h2>
<%= form_for @branch, :url=> "/branch", :html => {:method=>'post',:multipart => true, :id=>"frm-new-branch"} do |f| %>
<div class="inputSpacing">
  <div class='error'>
    <%= flash[:error] %>
  </div>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
  <div class="clear"></div>
  <label for="branch_name">Name </label>
  <%= f.text_field :name, :placeholder=>"myBranch" %>
  <p></p>
		<label for="country_flag_url">Country Flag URL </label>
  <%= f.text_field :country_flag_url, :placeholder=>"" %>
  <p></p>
		<label for="latitide">Latitude</label>
  <%= f.text_field :latitude, :placeholder=>"" %>
  <p></p>
		<label for="longitude">Longitude </label>
  <%= f.text_field :longitude, :placeholder=>"" %>
  <p></p>
		<label for="contact">Contact </label>
  <%= f.text_field :contact, :placeholder=>"" %>
  <p></p>
		<label for="ivr_call_number">IVR Call Number </label>
  <%= f.text_field :ivr_call_number, :placeholder=>"" %>
  <p></p>
		<label for="client_ip_address">Client IP Address </label>
  <%= f.text_field :client_ip_address, :placeholder=>"" %>
  <p></p>
  <label for="branch_forum_type">Forum&nbsp;Type </label>
  <% options = forum_options %>
  <%= f.select :forum_type, options_for_select(options, 0), :style=>'' %>
  <p></p>
  <label for="branch_country_id">Country </label>
  <% options = Country.all.map{|b| [b.name, b.id]} %>
  <%= f.select :country_id, options_for_select(options, 0), :style=>'' %>
  <p></p>
		<label for="branch_is_active">Is Active? </label>
  <% options = [['False', 0], ['True', 1]] %>
  <%= f.select :is_active, options_for_select(options, 1), :style=>'' %>
  <p></p>
  <label for="branch_description">Description</label>
  <%= f.text_area :description %>
  <div class="btnUploadWrap">
    <span><%= submit_tag 'Save', :id=>"save", :class=>"btnAction" %></span>
    <span><%= submit_tag 'Cancel', :id=>"cancel", :class=>"btnAction" %></span>
  </div>
  
</div>
<% end %>
</div>

