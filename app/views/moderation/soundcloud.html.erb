<style></style>
<div id="soundcloud-upload">
	 <h2>Upload Dropbox Public File to SoundCloud</h2>
  <div id="result">
    <% if @result =~ /^http/ %>
      <span class="success">Soundcloud link: <%= @result %></scan>
    <% elsif !!@result %>
      <span class="error">
        <%= @result %>
      </span>
    <% end %>
  </div>
    <p>
    <label class="subtle-label" for="soundcloud_url">Url</label>
    <input readonly="readonly" id="soundcloud_url" name="soundcloud[url]" type="text" value="<%= @entry.public_url %>" /> 
    </p>

    <p>
    <label class="subtle-label" for="soundcloud_title">Title*</label>
    <input id="soundcloud_title" name="soundcloud[title]" type="text" value="<%= @soundcloud.title %>" />
    </p>
    <p>
    <label class="subtle-genre" for="soundcloud_genre" title="Used as search filter">Genre</label>
    <input id="soundcloud_genre" name="soundcloud[genre]" type="text" value="<%= @soundcloud.genre || @entry.forum_session.name%>" />
    </p>
    <p>
    <label class="subtle-label" for="soundcloud_description">Description</label>
    <textarea id="soundcloud_description" name="soundcloud[description]"><%= @soundcloud.description %></textarea>
    </p>
    <p>
    <label class="subtle-label"> &nbsp;</label>
    <input type="submit" class="btnAction" id="submit" value="Submit" />
    <input type="submit" class="btnAction" value="Back" name="cancel" />
    </p>

</div>



