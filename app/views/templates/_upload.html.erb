<div id="template-popup" class="template-popup">
<%= form_for template, :url=> templates_path, :html => {:method=>'post',:multipart => true, :id=>"frm-upload-logo"} do |f| %>
<div class="inputSpacing"> 
  <input type="hidden" name="todo" value="" />
  <%= f.hidden_field :name %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :branch_id %>
		<input type="hidden" name="branch_id" value="<%= template.branch_id %>" />
		<div class='error'>
    <%= flash[:error] %>
  </div>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
		<%# if template.name =~ /introduction/ %>
		<% if 1==1 %>
    	   <% if template.kind_of?(Vote) %>
		      <div class="title">Enter/Select title for this Vote/Poll</div>		
		   <!-- <input type="text" name="<%= template.class.name.downcase%>[identifier]" value="<%= template.identifier %>" /> -->
		      <% options = VotingSession.all.map{|b| [b.name, b.name]}   
             id = template.identifier||template.branch.identifier
           %>
          <%= select_tag "#{template.class.name.downcase}[identifier]", options_for_select(options, id), :style=>'' %>
		   <% end %>
		<%# elsif !template.find_introduction %>
		  <!--
		  <div class='error'>
       You have to upload Introdution Voice Prompt first
      </div>
      -->
		<% else %>
		  <!--
		  <% if (template.kind_of?(Vote)||template.kind_of?(Bulletin))
         voting_name = template.identifier %>
         <input type="hidden" name="<%= template.class.name.downcase%>[identifier]" value="<%= voting_name %>" />
      <% end %>
    -->
		<% end %>


		<p></p>
  <h3><% if !!template.audio_link %>
    You have uploaded a file previously<br/>
    <% end %>
    Select your <%= template.name_map(template.name) %> audio file to upload</h3>
  <div class='fileBrowseWrap'>
    <%= f.file_field :sound %>
  </div>
  <div class="btnUploadWrap">
    <span><%= submit_tag 'Preview', :id=>"preview", :value=>"Upload", :class=>"btnAction" %></span>
    <% if !!template.audio_link || @preview || @save %>
      <span><%= submit_tag 'Activate', :id=>"save", :class=>"btnAction" %></span>
    <% end %>
    <span><%= submit_tag 'Cancel', :id=>"cancel", :class=>"btnAction" %></span>
  </div>
  <div class="clear">
    <% if !!template.audio_link || @preview %>
    <% src="/#{template.audio_link}" %>
    <!--
    <a id="<%=template.id%>" class="audio {ogg:'<%=src%>',downloadable:false,autoplay:false, inLine:true}"
         href="<%=src%>"><%= template.audio_link %>
    </a>
    -->
    <object data="<%= src %>" type="application/x-mplayer2" width="300" height="60" autoplay="false">
      <param name="filename" value="<%= src %>" />
      <param name="controller" value="true" /> 
      <param name="autoplay" value="false" />
      <param name="autostart" value="0" />
    </object>

    <% end %>
  </div>
  
</div>
<% end %>
</div>

