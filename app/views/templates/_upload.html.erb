<div id="template-popup" class="template-popup">
<%= form_for template, :url=> templates_path, :html => {:method=>'post',:multipart => true, :id=>"frm-upload-logo"} do |f| %>
<div class="inputSpacing"> 
  <input type="hidden" name="todo" value="" />
  <%= f.hidden_field :name %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :branch_id %>
		<div class='error'>
    <%= flash[:error] %>
  </div>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
		<% if template.name =~ /introduction/ %>
		  <div class="title">Enter a name for this <%= template.class.name %></div>
		  <%= f.text_field :identifier %>
		<% elsif !template.find_introduction %>
		  <div class='error'>
       You have to upload Introdution Voice Prompt first
    </div>
		<% else %>
		  <%= f.hidden_field :identifier, :value=>"#{template.find_introduction.name}" %>
		<% end %>
		<p></p>
  <h2>Select your <%= template.name.titleize %> file to upload</h2>
  <div class='fileBrowseWrap'>
    <%= f.file_field :sound %>
  </div>
  <div class="btnUploadWrap">
    <span><%= submit_tag 'Preview', :id=>"preview", :value=>"Upload (Preview)", :class=>"btnAction" %></span>
    <% if @preview %>
      <span><%= submit_tag 'Save', :id=>"save", :class=>"btnAction" %></span>
    <% end %>
    <span><%= submit_tag 'Cancel', :id=>"cancel", :class=>"btnAction" %></span>
  </div>
  <div class="clear">
    <% if @preview %>
    <% src="/#{template.audio_link}" %>
    <object data="<%= src %>" type="application/x-mplayer2" width="300" height="60">
      <param name="filename" value="<%= src %>">
    </object><!--
    <embed type="application/x-mplayer2" src="<%= src %>" width="300" height="60"></embed>
    --><% end %>
  </div>
  
</div>
<% end %>
</div>

