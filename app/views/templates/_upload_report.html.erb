<style></style>
<div id="report-popup" class="template-popup" style="width: 255px;">
  <p id="notice"></p>
  <%= form_for @branch, :url=> "/branch/upload_headline_audio", :html => {:method=>'post',:multipart => true, :id=>"frm-upload-report"} do |f| %>
  <input type="hidden" name="template_id" value="<%= @branch.reports.headline.id %>" />  
  <input type="hidden" name="branch_id" value="<%= @branch.id %>" />
  
  <div style="margin: 10px;">
    <input type="radio" name="recording" value="Browse" checked> Browse </input>
    <input type="radio" name="recording" value="Record"> Record</input>
  </div>
  
  <h3>Select your audio file to upload</h3>
  <div class='fileBrowseWrap'>
    <%= f.file_field :sound %>
  </div>
  <!--
     recorder here
  -->
  <div class="btnUploadWrap">
    <span><%= submit_tag 'Preview', :id=>"preview-report", :value=>"Upload",:class=>"btnAction" %></span>
    <span><%= submit_tag 'Cancel', :id=>"cancel-report", :class=>"btnAction" %></span>
  </div>
   <div class="clear"> 
    <% [@branch.reports.headline].each do |e| %>
       <%= player(e, false) %>
    <% end %>
   </div>
  <% end %>
</div>

